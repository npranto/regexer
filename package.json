{
  "name": "nsp-regexer",
  "version": "0.0.3",
  "description": "A simple and convenient library of functions that leverages regex and while hiding its complexity of implementation",
  "main": "dist/index.js",
  "dependencies": {
    "npm": "6.0.1"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "np": "2.20.1",
    "npm-run-all": "4.1.3",
    "nyc": "11.8.0",
    "rimraf": "2.6.2",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.4"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.spec.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "test": "mocha \"src/**/*.spec.js\" --require babel-core/register",
    "test:watch": "mocha \"src/**/*.spec.js\" --require babel-core/register --watch",
    "coverage": "nyc mocha src/**/*spec.js -x src/**/*.spec.js --require babel-core/register",
    "show-coverage": "npm run coverage && open coverage/lcov-report/index.html",
    "check-coverage": "npm run coverage && istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "publish": "npm run check-coverage && np"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npranto/regexer.git"
  },
  "keywords": [
    "regex",
    "function",
    "simple"
  ],
  "author": "Nazmuz Shakib Pranto <npranto@gmail.com> (http://nsp.surge.sh/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/npranto/regexer/issues"
  },
  "homepage": "https://github.com/npranto/regexer#readme"
}
